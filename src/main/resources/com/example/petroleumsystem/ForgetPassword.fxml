<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="533.0" prefWidth="426.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.petroleumsystem.ForgetPassword">
   <children>
      <Label alignment="CENTER" layoutX="93.0" layoutY="29.0" prefHeight="55.0" prefWidth="213.0" style="-fx-text-fill: #03256C;" text="Forget Password">
         <font>
            <Font name="SansSerif Regular" size="20.0" />
         </font>
      </Label>
      <TextField fx:id="txtUser" layoutX="93.0" layoutY="102.0" prefHeight="45.0" prefWidth="246.0" promptText="Enter Username" style="-fx-border-style: solid; -fx-border-width: 1pt; -fx-border-radius: 5; -fx-border-color: #E6E8EC;">
         <font>
            <Font name="SansSerif Regular" size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="ReadQuestion" layoutX="93.0" layoutY="230.0" prefHeight="45.0" prefWidth="246.0" style="-fx-border-width: 1pt; -fx-border-style: solid; -fx-border-color: #E6E8EC; -fx-border-radius: 5;">
         <font>
            <Font name="SansSerif Regular" size="15.0" />
         </font>
      </TextField>
      <Button fx:id="btnGetPassword" layoutX="93.0" layoutY="361.0" mnemonicParsing="false" onAction="#OnGetPassword" prefHeight="45.0" prefWidth="246.0" style="-fx-text-fill: white; -fx-background-color: #0B63E5; -fx-background-radius: 5;" text="Get Password">
         <font>
            <Font name="SansSerif Regular" size="15.0" />
         </font>
      </Button>
      <Hyperlink fx:id="goToLoginLink" layoutX="93.0" layoutY="461.0" onAction="#onGoToLogin" prefHeight="38.0" prefWidth="76.0" style="-fx-text-fill: #0B63E5; -fx-text-decoration: underline;" text="Login">
         <font>
            <Font name="SansSerif Regular" size="15.0" />
         </font>
      </Hyperlink>
      <Label fx:id="lblPrintPass" layoutX="92.0" layoutY="425.0" prefHeight="45.0" prefWidth="246.0" style="-fx-text-fill: #03256C;">
         <font>
            <Font name="SansSerif Regular" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="txtPassword" layoutX="93.0" layoutY="295.0" prefHeight="45.0" prefWidth="246.0" promptText="Enter answer of question" style="-fx-border-width: 1pt; -fx-border-style: solid; -fx-border-color: #E6E8EC; -fx-border-radius: 5;">
         <font>
            <Font name="SansSerif Regular" size="15.0" />
         </font>
      </TextField>
      <Button fx:id="userQuestion" layoutX="93.0" layoutY="165.0" mnemonicParsing="false" onAction="#getUserQuestion" prefHeight="45.0" prefWidth="246.0" style="-fx-text-fill: white; -fx-background-color: #0B63E5; -fx-border-radius: 5;" text="Get Question">
         <font>
            <Font name="SansSerif Regular" size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
